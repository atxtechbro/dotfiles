[user]
		name = Morgan Joyce
		email = morganj2k@gmail.com
[core]
		editor = nvim
		pager = delta
		attributesfile = ~/ppv/pillars/dotfiles/.gitattributes
[interactive]
		diffFilter = delta --color-only
[delta]
		navigate = true    # use n and N to move between diff sections
		light = false      # dark mode
		side-by-side = true
		line-numbers = true
		syntax-theme = Monokai Extended
		diff-so-fancy = true
		max-line-length = 200  # prevent overly wide diffs
		# Better handling of prose files
		word-diff-regex = "\\w+|[^[:space:]]"
		features = decorations
[delta "interactive"]
		keep-plus-minus-markers = false
[merge]
		conflictstyle = diff3
[diff]
		colorMoved = default
		algorithm = patience  # more intelligent diff algorithm
		wordRegex = [^[:space:]]
		submodule = log
[diff "astextplain"]
		textconv = cat
		wordRegex = .
[diff "markdown"]
		wordRegex = [^[:space:]]
		xfuncname = "^#+.*$"
		command = git diff --word-diff --no-index -- \"$LOCAL\" \"$REMOTE\"
[diff "json"]
		wordRegex = [^[:space:],]
[init]
		defaultBranch = main
[push]
		autoSetupRemote = true
[includeIf "gitdir:~/Sertifi/"]
		path=~/Sertifi/.gitconfig-work
[credential "https://github.com"]
		helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
        helper = !/usr/bin/gh auth git-credential
