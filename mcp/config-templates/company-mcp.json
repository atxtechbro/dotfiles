{
  "mcp_servers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@github/github-mcp-server"
      ],
      "timeout": 10000
    },
    "atlassian": {
      "command": "npx",
      "args": [
        "-y",
        "@sooperset/mcp-atlassian",
        "--baseUrl",
        "https://your-company.atlassian.net"
      ],
      "env": {
        "ATLASSIAN_USERNAME": "${COMPANY_ATLASSIAN_USERNAME}",
        "ATLASSIAN_API_TOKEN": "${COMPANY_ATLASSIAN_API_TOKEN}"
      },
      "timeout": 10000
    },
    "slack": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-slack"
      ],
      "env": {
        "SLACK_TOKEN": "${COMPANY_SLACK_TOKEN}"
      },
      "timeout": 10000
    },
    "test": {
      "bin_path": "mcp/test-mcp-server",
      "args": [],
      "timeout": 5000
    }
  }
}
