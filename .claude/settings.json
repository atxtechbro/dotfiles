{
  "cleanupPeriodDays": 90,
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "BASH_DEFAULT_TIMEOUT_MS": "31000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_MAX_OUTPUT_LENGTH": "50000",
    "DISABLE_COST_WARNINGS": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "MCP_TIMEOUT": "30000",
    "MCP_TOOL_TIMEOUT": "60000",
    "MAX_MCP_OUTPUT_TOKENS": "40000",
    "MAX_THINKING_TOKENS": "121393",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "OTEL_METRIC_EXPORT_INTERVAL": "10000",
    "OTEL_LOGS_EXPORT_INTERVAL": "5000",
    "OTEL_LOG_USER_PROMPTS": "0",
    "OTEL_RESOURCE_ATTRIBUTES": "team=dotfiles,env=dev,service.name=claude-code"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "LS",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "NotebookRead",
      "NotebookEdit",
      "Task",
      "TodoWrite",
      "WebFetch(domain:*)",
      "WebSearch",
      "Bash(source:*)",
      "Bash(cd:*)",
      "Bash(claude config --help)",
      "Bash(claude config get:*)",
      "Bash(claude config list:*)",
      "Bash(./utils/configure-claude-code-settings.sh:*)",
      "Bash(check-mcp-logs:*)",
      "Bash(python:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(tmux display-message \"[A-Za-z0-9\\s\\-_.:!?,]+\")",
      "mcp__playwright"
    ],
    "deny": [
      "Bash(git push:main)",
      "Bash(git push:master)",
      "Bash(git add -A:*)",
      "Bash(git add:.:*)"
    ],
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "//"
    ]
  },
  "model": "claude-sonnet-4-5-20250929",
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "enabledPlugins": {
    "dotfiles-commands@dotfiles-marketplace": true
  },
  "forceLoginMethod": "claudeai",
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
"command": "notify-send 'Claude Code' 'Awaiting your input - please check the terminal'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'input=$(cat); mkdir -p ~/.claude/sessions && echo \"$(date -Iseconds) | Session: $(echo \"$input\" | jq -r .session_id) | Transcript: $(echo \"$input\" | jq -r .transcript_path) | Reason: $(echo \"$input\" | jq -r .reason)\" >> ~/.claude/sessions/log.txt'"
          }
        ]
      }
    ]
  }
}
