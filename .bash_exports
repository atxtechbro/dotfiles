export FCEDIT=nvim
export EDITOR=nvim
export SUDO_EDITOR=nvim
export RUST_BACKTRACE=full

# Prevent WSL_DISTRO_NAME unbound variable errors in Amazon Q integration
# Set to empty if not already defined (non-WSL environments)
: ${WSL_DISTRO_NAME:=}

# Add MCP wrapper scripts to PATH for cross-machine portability
export PATH="$PATH:$HOME/ppv/pillars/dotfiles/mcp"

# Load machine-specific exports if they exist
if [ -f ~/.bash_exports.local ]; then
    . ~/.bash_exports.local
fi
